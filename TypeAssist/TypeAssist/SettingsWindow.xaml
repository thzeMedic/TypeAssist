<Window x:Class="TypeAssist.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TypeAssist"
        mc:Ignorable="d"
        Title="Settings" Height="250" Width="250">
    <Grid>
        <Label Content="Mode: " Grid.Column="0" HorizontalAlignment="Center" Margin="70"></Label>
        <ComboBox x:Name="modeSelection" SelectedIndex="{Binding Mode}" Height="20" Width="50" Grid.Column="1"></ComboBox>
    </Grid>
</Window>
