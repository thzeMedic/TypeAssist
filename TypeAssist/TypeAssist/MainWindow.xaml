<Window x:Class="TypeAssist.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TypeAssist"
        mc:Ignorable="d"
        Title="TypeAssist" Height="450" Width="800"
        WindowStyle="None" WindowState="Maximized"
        AllowsTransparency="True"
        Topmost="True">
    <Window.Background>
        <SolidColorBrush Opacity="1"/>
    </Window.Background>
    <Grid>
        <TextBlock x:Name="testblock"
                   Text="TypeAssist Overlay"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Center"
                   FontSize="48"
                   Foreground="Violet"
                   />
        <Popup x:Name="testPopup"
               Placement="Mouse"
               StaysOpen="False"
               Width="50"
               Height="100">
            
        </Popup>

    </Grid>
</Window>