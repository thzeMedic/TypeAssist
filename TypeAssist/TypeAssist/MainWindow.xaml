<Window x:Class="TypeAssist.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TypeAssist"
        mc:Ignorable="d"
        Title="TypeAssist" Height="450" Width="800"
        WindowStyle="None" WindowState="Maximized"
        AllowsTransparency="True"
        Topmost="True">
    <Window.Background>
        <SolidColorBrush Opacity="1"/>
    </Window.Background>
    <Grid>
        <Rectangle x:Name="AnchorRight"
                   HorizontalAlignment="Right" VerticalAlignment="Center"
                   Width="1" Height="1" Visibility="Hidden"/>

        <Rectangle x:Name="AnchorLeft"
                   HorizontalAlignment="Left" VerticalAlignment="Center"
                   Width="1" Height="1" Visibility="Hidden"/>

        <Rectangle x:Name="AnchorTop"
                   HorizontalAlignment="Center" VerticalAlignment="Top"
                   Width="1" Height="1" Visibility="Hidden"/>

        <Rectangle x:Name="AnchorBottom"
                   HorizontalAlignment="Center" VerticalAlignment="Bottom"
                   Width="1" Height="1" Visibility="Hidden"/>
        
        <Popup x:Name="recommendations"
               StaysOpen="False"
               MinHeight="50"
               MinWidth="100">

        </Popup>
    </Grid>
</Window>